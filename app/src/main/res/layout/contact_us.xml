<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    android:weightSum="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/problem_description"
        android:hint="@string/describe_problem"
        android:inputType="text|textMultiLine"
        android:layout_weight="0.40" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/read_faq"
        android:id="@+id/read_faq"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.50"
        android:weightSum="1"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add screenshots, optional : "
            android:id="@+id/add_screenshots"
            android:editable="false"
            android:inputType="none"
            android:textColor="@color/laudhoot_theme_color"
            android:layout_weight="0.20"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.80"
            android:weightSum="1" >


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/problem_screenhot1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.333"
                android:background="@drawable/ic_plus"
                android:backgroundTint="@android:color/darker_gray"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/problem_screenhot2"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.333"
                android:background="@drawable/ic_plus"
                android:backgroundTint="@android:color/darker_gray"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/problem_screenhot3"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.333"
                android:background="@drawable/ic_plus"
                android:backgroundTint="@android:color/darker_gray"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>