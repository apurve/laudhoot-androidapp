<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_row_selector"
    android:padding="2dp"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/shout_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9" >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/label"
            android:textSize="@dimen/message" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/laudhoot_layout"
        android:orientation="vertical"
        android:layout_width="@dimen/arrow_button"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="6"  >

        <Button
            android:id="@+id/laud"
            android:background="@drawable/arrow_inactive"
            android:layout_width="@dimen/arrow_button"
            android:layout_height="@dimen/arrow_button"
            android:layout_weight="2"
            android:clickable="true"
            android:layout_gravity="top" />

        <TextView
            android:id="@+id/laudhoot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textColor="@color/label"
            android:layout_weight="2"
            android:textSize="@dimen/laudhoot_count"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/hoot"
            android:background="@drawable/arrow_inactive"
            android:layout_width="@dimen/arrow_button"
            android:layout_height="@dimen/arrow_button"
            android:layout_weight="2"
            android:clickable="true"
            android:layout_gravity="bottom"
            android:rotation="0" />

    </LinearLayout>

</LinearLayout>
